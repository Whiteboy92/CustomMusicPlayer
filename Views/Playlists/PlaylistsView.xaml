<UserControl x:Class="MusicPlayer.Views.Playlists.PlaylistsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MusicPlayer.Views.Playlists"
             xmlns:models="clr-namespace:MusicPlayer.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <local:PlaylistIdToVisibilityConverter x:Key="PlaylistIdToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel MaxWidth="700">
                <!-- Header -->
                <Grid Margin="0,0,0,20">
                    <TextBlock Text="Playlists" 
                              Style="{StaticResource SectionHeaderStyle}"
                              FontSize="20"/>
                    <Button
                        Content="Create New"
                           Click="BtnCreatePlaylist_Click"
                           HorizontalAlignment="Right"
                           Padding="15,8"
                           Background="{StaticResource AccentBrush}"
                           Foreground="White"
                           BorderThickness="0"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="6"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Playlists List -->
                <ItemsControl x:Name="PlaylistsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:Playlist}">
                            <Border Style="{StaticResource PlaylistCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontSize="15"
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextBrush}"
                                                  Margin="0,0,0,5"/>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="{Binding SongCount, StringFormat='{}{0} songs'}"
                                                      FontSize="12"
                                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Genre, StringFormat='Genre: {0}'}"
                                                  FontSize="11"
                                                  Foreground="#888888"
                                                  Margin="0,0,0,2"/>
                                        
                                        <TextBlock Text="{Binding Tags, StringFormat='Tags: {0}'}"
                                                  FontSize="11"
                                                  Foreground="#888888"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" 
                                               Orientation="Horizontal"
                                               VerticalAlignment="Center">
                                        <Button Content="✏️"
                                               Click="BtnEditPlaylist_Click"
                                               Tag="{Binding Id}"
                                               Padding="12,8"
                                               Background="{StaticResource AccentBrush}"
                                               Foreground="White"
                                               BorderThickness="0"
                                               Cursor="Hand"
                                               ToolTip="Edit Playlist"
                                               Margin="0,0,5,0">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                       CornerRadius="4"
                                                                       Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                    VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.9"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button Content="🗑"
                                               Click="BtnDeletePlaylist_Click"
                                               Tag="{Binding Id}"
                                               Padding="12,8"
                                               Background="#DC3545"
                                               Foreground="White"
                                               BorderThickness="0"
                                               Cursor="Hand"
                                               ToolTip="Delete Playlist"
                                               Visibility="{Binding Id, Converter={StaticResource PlaylistIdToVisibilityConverter}}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                       CornerRadius="4"
                                                                       Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                    VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.9"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <TextBlock x:Name="TxtEmptyState"
                          Text="No playlists yet. Create your first playlist!"
                          FontSize="14"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          TextAlignment="Center"
                          Margin="0,40,0,0"
                          Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

