<UserControl x:Class="MusicPlayer.Views.Playlist.PlaylistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:MusicPlayer.Models"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=models:MusicFile}">
    
    <UserControl.Resources>
        <!-- Custom ListBox Item Style -->
        <Style x:Key="PlaylistItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0,0,0,1" 
                                BorderBrush="#333333"
                                Padding="15,12">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2d2d2d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="5" Background="#1a1a1a">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#2d2d2d" 
                    BorderThickness="0,0,0,1" BorderBrush="#333333"
                    CornerRadius="5,5,0,0" Padding="15,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="#" 
                               Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold" FontSize="13"/>
                    <TextBlock Grid.Column="1" Text="Song Name" 
                               Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold" FontSize="13"/>
                    <TextBlock Grid.Column="2" Text="Duration" 
                               Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold" FontSize="13" 
                               HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Playlist -->
            <ListBox Grid.Row="1" Name="PlaylistBox" 
                     Background="Transparent" 
                     Foreground="White"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                     SelectionChanged="PlaylistBox_SelectionChanged"
                     MouseDoubleClick="PlaylistBox_MouseDoubleClick"
                     ItemContainerStyle="{StaticResource PlaylistItemStyle}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <!-- Track Number -->
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding TrackNumber}" 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="13"
                                       VerticalAlignment="Center"/>

                            <!-- Song Name -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding FileName}" 
                                           Foreground="{StaticResource TextBrush}"
                                           FontSize="14" 
                                           FontWeight="Medium"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <!-- Duration -->
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding Duration}" 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="13"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Empty State -->
            <StackPanel Grid.Row="1" 
                        x:Name="EmptyState"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="Collapsed">
                <TextBlock Text="ðŸŽµ" 
                           FontSize="48" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"
                           Foreground="#666666"/>
                <TextBlock Text="No music found" 
                           FontSize="16" 
                           Foreground="#666666" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="C:\Whiteboy\Admin\Music Mp3" 
                           FontSize="12" 
                           Foreground="#555555" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
