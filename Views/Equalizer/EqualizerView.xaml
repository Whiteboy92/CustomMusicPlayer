<UserControl x:Class="MusicPlayer.Views.Equalizer.EqualizerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="5" Background="#1a1a1a" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- EQ Sliders -->
            <Grid Grid.Row="1" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Band 1: 80 Hz -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="40,0">
                    <TextBlock Text="80 Hz" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    
                    <Slider Name="Band80Slider"
                            Orientation="Vertical"
                            Height="250"
                            Minimum="-12"
                            Maximum="12"
                            Value="0"
                            TickFrequency="3"
                            TickPlacement="Both"
                            IsSnapToTickEnabled="False"
                            ValueChanged="Band80Slider_ValueChanged"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <TextBlock Name="Band80Value" 
                               Text="0.0 dB" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PlayButtonGreenBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Band 2: 240 Hz -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="40,0">
                    <TextBlock Text="240 Hz" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    
                    <Slider Name="Band240Slider"
                            Orientation="Vertical"
                            Height="250"
                            Minimum="-12"
                            Maximum="12"
                            Value="0"
                            TickFrequency="3"
                            TickPlacement="Both"
                            IsSnapToTickEnabled="False"
                            ValueChanged="Band240Slider_ValueChanged"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <TextBlock Name="Band240Value" 
                               Text="0.0 dB" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PlayButtonGreenBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Band 3: 750 Hz -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="40,0">
                    <TextBlock Text="750 Hz" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    
                    <Slider Name="Band750Slider"
                            Orientation="Vertical"
                            Height="250"
                            Minimum="-12"
                            Maximum="12"
                            Value="0"
                            TickFrequency="3"
                            TickPlacement="Both"
                            IsSnapToTickEnabled="False"
                            ValueChanged="Band750Slider_ValueChanged"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <TextBlock Name="Band750Value" 
                               Text="0.0 dB" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PlayButtonGreenBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Band 4: 2200 Hz -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center" Margin="40,0">
                    <TextBlock Text="2200 Hz" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    
                    <Slider Name="Band2200Slider"
                            Orientation="Vertical"
                            Height="250"
                            Minimum="-12"
                            Maximum="12"
                            Value="0"
                            TickFrequency="3"
                            TickPlacement="Both"
                            IsSnapToTickEnabled="False"
                            ValueChanged="Band2200Slider_ValueChanged"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <TextBlock Name="Band2200Value" 
                               Text="0.0 dB" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PlayButtonGreenBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Band 5: 6600 Hz -->
                <StackPanel Grid.Column="4" HorizontalAlignment="Center" Margin="40,0">
                    <TextBlock Text="6600 Hz" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    
                    <Slider Name="Band6600Slider"
                            Orientation="Vertical"
                            Height="250"
                            Minimum="-12"
                            Maximum="12"
                            Value="0"
                            TickFrequency="3"
                            TickPlacement="Both"
                            IsSnapToTickEnabled="False"
                            ValueChanged="Band6600Slider_ValueChanged"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <TextBlock Name="Band6600Value" 
                               Text="0.0 dB" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PlayButtonGreenBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
