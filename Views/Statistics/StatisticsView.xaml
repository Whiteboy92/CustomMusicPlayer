<UserControl x:Class="MusicPlayer.Views.Statistics.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MusicPlayer.Views.Statistics"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:SongStatistic}">
    
    <UserControl.Resources>
        <!-- Statistics Item Style -->
        <Style x:Key="StatsItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0,0,0,1" 
                                BorderBrush="#333333"
                                Padding="20,15">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2d2d2d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="5" Background="#1a1a1a">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="30,30,30,20">
                <TextBlock Text="ðŸ“Š Listening Statistics" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Name="TxtStats" 
                           Text="Total plays: 0  â€¢  Most played song: None" 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Playlist Dropdown -->
            <ComboBox Grid.Row="1" x:Name="PlaylistDropdown"
                     SelectionChanged="PlaylistDropdown_SelectionChanged"
                     Style="{StaticResource CustomComboBoxStyle}"
                     Margin="30,0,30,5">
                <ComboBoxItem Content="Default Queue" IsSelected="True"/>
            </ComboBox>

            <!-- Column Headers -->
            <Border Grid.Row="2" Background="#2d2d2d" 
                    BorderThickness="0,1,0,1" BorderBrush="#333333"
                    Padding="20,12" Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="#" 
                                Foreground="{StaticResource TextSecondaryBrush}" 
                                FontWeight="SemiBold" FontSize="13"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Song Name" 
                                Foreground="{StaticResource TextSecondaryBrush}" 
                                FontWeight="SemiBold" FontSize="13"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="Duration" 
                                Foreground="{StaticResource TextSecondaryBrush}" 
                                FontWeight="SemiBold" FontSize="13" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Play Count" 
                                Foreground="{StaticResource TextSecondaryBrush}" 
                                FontWeight="SemiBold" FontSize="13" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Statistics List -->
            <ListBox Grid.Row="3" Name="StatsList" 
                     Background="Transparent" 
                     Foreground="White"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                     ItemContainerStyle="{StaticResource StatsItemStyle}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <!-- Rank with Medal/Number (aligned) -->
                            <Grid Grid.Column="0">
                                <Grid.Resources>
                                    <!-- Show medal only when RankIcon is not empty -->
                                    <Style x:Key="MedalVisibilityStyle" TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RankIcon}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                    <!-- Show number only when RankIcon is empty -->
                                    <Style x:Key="RankVisibilityStyle" TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RankIcon}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Resources>

                                <!-- Medal (top 3) -->
                                <TextBlock Text="{Binding RankIcon}"
                                           FontFamily="Segoe UI Emoji"
                                           FontSize="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Style="{StaticResource MedalVisibilityStyle}"/>
                                
                                <!-- Numeric rank (4+) -->
                                <TextBlock Text="{Binding Rank}"
                                           FontSize="16"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Style="{StaticResource RankVisibilityStyle}"/>
                            </Grid>

                            <!-- Song Name -->
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding FileName}" 
                                       Foreground="{StaticResource TextBrush}"
                                       FontSize="14" 
                                       FontWeight="Medium"
                                       TextTrimming="CharacterEllipsis"
                                       VerticalAlignment="Center"/>

                            <!-- Duration -->
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding Duration}" 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="13"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <!-- Play Count with Icon -->
                            <StackPanel Grid.Column="3" Orientation="Horizontal" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="â–¶" 
                                           Foreground="{StaticResource PlayButtonGreenBrush}" 
                                           FontSize="12"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding PlayCount}" 
                                           Foreground="{StaticResource PlayButtonGreenBrush}"
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Empty State -->
            <StackPanel Grid.Row="3" 
                        x:Name="EmptyState"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="Collapsed">
                <TextBlock Text="ðŸ“Š" 
                           FontSize="48" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"
                           Foreground="#666666"/>
                <TextBlock Text="No listening history yet" 
                           FontSize="16" 
                           Foreground="#666666" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Play some songs to see statistics" 
                           FontSize="12" 
                           Foreground="#555555" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

