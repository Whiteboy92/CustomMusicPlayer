<Window x:Class="MusicPlayer.Windows.CreatePlaylistWindow.CreatePlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:customTitleBar="clr-namespace:MusicPlayer.Views.CustomTitleBar"
        xmlns:local="clr-namespace:MusicPlayer.Windows.CreatePlaylistWindow"
        mc:Ignorable="d"
        Title="Create New Playlist"
        Height="600"
        Width="900"
        MinHeight="600"
        MinWidth="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
    </Window.Resources>

    <Grid>
        <Border Background="{StaticResource BackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <customTitleBar:CustomTitleBar x:Name="CustomTitleBar" Grid.Row="0" Title="Create New Playlist"/>
                
                <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Playlist Information" 
                      FontSize="16" 
                      FontWeight="SemiBold"
                      Foreground="{StaticResource TextBrush}"
                      Margin="0,0,0,15"/>

            <Grid Margin="0,0,0,6">
                <TextBlock Text="Playlist Name *" Style="{StaticResource LabelStyle}" Margin="0"/>
                <TextBlock x:Name="TxtPlaylistNameCounter"
                          Text="0/64"
                          FontSize="11"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"/>
            </Grid>
            <TextBox x:Name="TxtPlaylistName" 
                    Style="{StaticResource TextBoxStyle}"
                    MaxLength="64"
                    TextChanged="TxtPlaylistName_TextChanged"
                    Margin="0,0,0,15"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Grid Margin="0,0,0,6">
                        <TextBlock Text="Genre (Optional)" Style="{StaticResource LabelStyle}" Margin="0"/>
                        <TextBlock x:Name="TxtGenreCounter"
                                  Text="0/64"
                                  FontSize="11"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"/>
                    </Grid>
                    <TextBox x:Name="TxtGenre" 
                            Style="{StaticResource TextBoxStyle}"
                            MaxLength="64"
                            TextChanged="TxtGenre_TextChanged"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Grid Margin="0,0,0,6">
                        <TextBlock Text="Tags (Optional)" Style="{StaticResource LabelStyle}" Margin="0"/>
                        <TextBlock x:Name="TxtTagsCounter"
                                  Text="0/200"
                                  FontSize="11"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"/>
                    </Grid>
                    <TextBox x:Name="TxtTags" 
                            Style="{StaticResource TextBoxStyle}"
                            MaxLength="200"
                            TextChanged="TxtTags_TextChanged"
                            ToolTip="Comma-separated tags (e.g., workout, chill, party)"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <Grid x:Name="SongSelectionSection" Grid.Row="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Select Songs" 
                          FontSize="16" 
                          FontWeight="SemiBold"
                          Foreground="{StaticResource TextBrush}"
                          Margin="0,0,0,10"/>
                
                <Grid>
                    <TextBox x:Name="TxtSearch"
                            Style="{StaticResource TextBoxStyle}"
                            TextChanged="TxtSearch_TextChanged"
                            ToolTip="Search by song name or artist"/>
                    
                    <TextBlock Text="Search by song name or artist"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="13"
                               Margin="15,0,0,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=TxtSearch}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </StackPanel>

            <Border Grid.Row="1" 
                   Background="{StaticResource CardBackgroundBrush}"
                   BorderBrush="{StaticResource BorderBrush}"
                   BorderThickness="1"
                   CornerRadius="6"
                   Margin="0,0,0,15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="SongsItemsControl" Padding="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:SelectableSong}">
                                <Border Background="Transparent" 
                                       Padding="8"
                                       Margin="0,0,0,2">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#10FFFFFF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <CheckBox Grid.Column="0"
                                                 IsChecked="{Binding IsSelected}"
                                                 Style="{StaticResource CustomCheckboxStyle}"/>
                                        
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding DisplayName}"
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                                        
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Duration}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <TextBlock x:Name="TxtSelectedCount"
                      Text="0 songs selected"
                      FontSize="12"
                      Foreground="{StaticResource TextSecondaryBrush}"
                      VerticalAlignment="Center"
                      Margin="0,0,20,0"/>
            
            <Button Content="Cancel"
                   Click="BtnCancel_Click"
                   Margin="0,0,10,0"
                   Style="{StaticResource SecondaryButtonStyle}"/>

            <Button x:Name="BtnSave"
                   Content="Save Playlist"
                   Click="BtnSave_Click"
                   Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
        </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>

