<UserControl x:Class="MusicPlayer.Views.CustomTitleBar.CustomTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="800"
             Height="32">
    
    <UserControl.Resources>
        <!-- Title Bar Button Style -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="#000000" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App Icon -->
            <Image Grid.Column="0" Source="/Assets/icon.ico" Width="20" Height="20" Margin="10,0,0,0" VerticalAlignment="Center"/>
            
            <!-- Title -->
            <TextBlock Grid.Column="1" 
                       Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Foreground="White" 
                       FontSize="14"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left"
                       Margin="10,0,0,0"/>

            <!-- Window Control Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" 
                        WindowChrome.IsHitTestVisibleInChrome="True">
                <Button Content="─" 
                        Width="45" Height="32"
                        FontSize="14"
                        Click="BtnMinimize_Click"
                        Style="{StaticResource TitleBarButtonStyle}"/>
                <Button Name="BtnMaximize" Content="□" 
                        Width="45" Height="32"
                        FontSize="14"
                        Click="BtnMaximize_Click"
                        Style="{StaticResource TitleBarButtonStyle}"/>
                <Button Content="✕" 
                        Width="45" Height="32"
                        FontSize="14"
                        Click="BtnClose_Click"
                        Style="{StaticResource CloseButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

